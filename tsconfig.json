{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "ESNext",                                
    "jsx": "react-jsx",                                
    "strict": true,                                    
    "esModuleInterop": true,                           
    "skipLibCheck": true,                              
    "forceConsistentCasingInFileNames": true,          
    "resolveJsonModule": true,                         
    "moduleResolution": "node",                       
    "allowSyntheticDefaultImports": true,             
    "strictNullChecks": true                          
  },
  "include": [
    "src/**/*"                                         
  ],
  "exclude": [
    "node_modules",                                    
    "dist"                                            
  ]
}
